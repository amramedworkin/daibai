# DaiBai Configuration Example
# Copy this file to daibai.yaml and fill in your settings

# LLM Provider Configuration
llm:
  # Default provider to use
  default: gemini
  
  providers:
    # Google Gemini
    gemini:
      type: gemini
      model: gemini-2.5-pro
      api_key: ${GEMINI_API_KEY}
      temperature: 0.7
    
    # OpenAI GPT
    openai:
      type: openai
      model: gpt-4o
      api_key: ${OPENAI_API_KEY}
      organization: ${OPENAI_ORG}  # Optional
    
    # Azure OpenAI
    azure:
      type: azure
      deployment: my-gpt4-deployment
      endpoint: https://myresource.openai.azure.com
      api_key: ${AZURE_OPENAI_KEY}
      api_version: "2024-02-01"
    
    # Anthropic Claude
    anthropic:
      type: anthropic
      model: claude-3-5-sonnet-20241022
      api_key: ${ANTHROPIC_API_KEY}
      max_tokens: 4096
    
    # Local Ollama (no API key needed)
    ollama:
      type: ollama
      model: codellama:13b
      host: http://localhost:11434
    
    # Groq (OpenAI-compatible, fast inference)
    groq:
      type: groq
      model: llama-3.1-70b-versatile
      api_key: ${GROQ_API_KEY}
    
    # DeepSeek (OpenAI-compatible)
    deepseek:
      type: deepseek
      model: deepseek-chat
      api_key: ${DEEPSEEK_API_KEY}
    
    # Mistral AI (OpenAI-compatible)
    mistral:
      type: mistral
      model: mistral-large-latest
      api_key: ${MISTRAL_API_KEY}
    
    # Nvidia NIM (Nvidia Inference Microservices)
    nvidia:
      type: nvidia
      model: meta/llama-3.1-70b-instruct-v2
      api_key: ${NVIDIA_API_KEY}
    
    # Alibaba Cloud DashScope (Qwen)
    alibaba:
      type: alibaba
      model: qwen-max
      api_key: ${DASHSCOPE_API_KEY}
      # endpoint: https://dashscope-intl.aliyuncs.com/compatible-mode/v1  # Singapore
      # endpoint: https://dashscope-us.aliyuncs.com/compatible-mode/v1   # Virginia
      # endpoint: https://dashscope.aliyuncs.com/compatible-mode/v1     # Beijing
    
    # Meta Llama (via partner - endpoint required)
    meta:
      type: meta
      model: llama-3.1-70b
      api_key: ${META_API_KEY}
      endpoint: https://your-meta-provider.com/v1  # e.g. Groq, Azure AI, etc.

# Database Configuration
databases:
  # Default database
  default: production
  
  production:
    host: ${DB_PROD_HOST}
    port: 3306
    name: myapp
    user: ${DB_PROD_USER}
    password: ${DB_PROD_PASSWORD}
    ssl: false
  
  staging:
    host: localhost
    port: 3306
    name: staging_db
    user: ${DB_STAGING_USER}
    password: ${DB_STAGING_PASSWORD}
  
  development:
    host: localhost
    port: 3306
    name: dev_db
    user: root
    password: ${DB_DEV_PASSWORD}

# Optional settings
clipboard: true
exports_dir: ~/.daibai/exports
memory_dir: ~/.daibai/memory
